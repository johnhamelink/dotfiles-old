[bars]

  # Position:
  #
  # 0  Top
  # 1  Bottom
  # 2  Hide

  # Element type:
  #
  # t  Tags
  # s  Statustext (will take available space)
  # y  Systray (can be set only ONE time among all element)
  # l  Launcher (will be expended at launcher use)

  [bar]
     position = 0
     screen = 0
     elements = "tlys"   # element order in bar
     theme = "slate"
  [/bar]

 [bar]
    position = 0
    screen = 1
    elements = "tls"
    theme = "slate"
 [/bar]

[/bars]

